<view class="main">
    <!-- 公共头部 -->
    <my-title></my-title>

    <!-- 首页导航 -->
    <scroll-view scroll-x class="nav">
        <view 
            class="nav-item {{index==currentIndexNav?'active':''}}" 
            wx:for="{{navList}}" 
            wx:key="{{index}}"
            bindtap="activeNav" 
            data-index="{{index}}">

                {{item.text}}
        
        </view>
    </scroll-view>

    <!-- 轮播图 -->
    <view class="slides">
        <swiper indicator-dots indicator-color="#666" indicator-active-color="black" circular autoplay interval="4000">
            <swiper-item wx:for="{{swiperList}}" wx:key="{{index}}">
                <navigator>
                    <image mode="widthFix" src="{{item.imgSrc}}"></image>
                </navigator>
            </swiper-item>
        </swiper>
    </view>

    <!-- <text class="fa fa-play-circle-o"></text> -->

    <!-- 视频列表 -->
    <view class="videf_wrap">

        <!-- item -->
        <navigator class="video_item" wx:for="{{videosList}}" wx:key="{{index}}">
            <!-- 图片 -->
            <view class="video_img">
                <image src="{{item.imgSrc}}"></image>
                <!-- 图片下方的播放量与评论 -->
                <view class="video_info"> 
                    <view class="paly_count_wrap"> <!-- 播放量 -->
                        <text class="fa fa-play-circle-o"></text>
                        <text class="play_count">{{item.playCount}}</text>
                    </view>
                    <view class="comment_count_row"> <!-- 评论 -->
                        <text class="fa fa-commenting-o"></text>
                        <text class="comment_count">{{item.commentCount}}</text>
                    </view>
                </view>
            </view>

            <!-- 标题 -->
            <view class="video_title">{{item.desc}}</view>
        </navigator> -->

    </view>
</view>