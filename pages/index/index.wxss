.nav
{
    white-space: nowrap;
    padding: 5rpx 0rpx;
}

.nav .nav-item
{
    color: #666;
    padding: 20rpx 45rpx;
    font-size: 30rpx;
    display: inline-block;
}

.active
{
    border-bottom: red 2px solid;
}

/* 轮播图 */
.slides
{
    margin-top: 10rpx;
}

.slides swiper
{
    height: 220rpx;
}

.slides swiper navigator
{
    width: 100%;
    height: 100%;
}
.slides swiper navigator image
{
    width: 100%;
    height: 100%;
}

/* 视频列表 */
.video_wrap
{
    display: flex;
    flex-wrap: wrap;
    padding: 5rxp;
    justify-content: space-between;
}

.video_wrap .video_item
{
    width: 48%;
    margin-bottom: 20rpx;
}

.video_wrap .video_item .video_img
{
    position: relative;
}

.video_wrap .video_item .video_img image
{
    width: 100%;
    border-radius: 15rpx;
}

.video_info
{
    position: absolute;
    bottom: 10rpx;
    left: 0;
    width: 100%;
    display: flex;
    justify-content: space-around;
    color: #fff;
    font-size: 24rpx;
}

.video_title
{
    font-size: 28rpx;
    display: -webkit-box;
    overflow: hidden;
    white-space: normal;
    text-overflow: ellipsis;
    word-wrap: break-word;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}